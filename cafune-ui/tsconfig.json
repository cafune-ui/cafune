{
  "compilerOptions": {
    "baseUrl": ".",
    "experimentalDecorators": true,
    "paths": {
      "components": ["components"],
      "util/*": ["util/*"]
    },
    "outDir": "./es",
    "allowJs": true,
    "jsx": "react",
    "jsxFactory": "h",
    "target": "es2018",
    "module": "ESNext",
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "esModuleInterop": true
  },
  "include": ["components/**/*.ts", "components/**/*.tsx"],
  "typeRoots": ["./types"],
  "exclude": ["node_modules", "doc", "components/*/test"]
}